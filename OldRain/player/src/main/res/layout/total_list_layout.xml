<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/top_bar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:id="@+id/topbar" />
    <RelativeLayout
        android:id="@+id/one"
        android:layout_below="@id/topbar"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/sign"
            android:src="@drawable/ic_launcher"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/oldrain"
            android:layout_toRightOf="@id/sign"
            android:text="Old Rain"
            android:textColor="@color/loved"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_below="@id/oldrain"
            android:layout_toRightOf="@id/sign"
            android:src="@drawable/diamond"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/wifi_auto_off"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/three"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/song_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/play_pause"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/play"
            android:background="#00000000"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/play_pause"
            android:layout_toRightOf="@id/song_image"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/song_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="不潮不用花钱"
                android:textColor="@color/loved"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/singers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="林俊杰"
                android:textColor="@color/loved_tra"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/two"
        android:orientation="vertical"
        android:layout_below="@id/one"
        android:layout_above="@id/three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/top_bar">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/divider"/>
        <Button
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/divider"/>
        <ListView
            android:id="@id/android:list"
            android:background="@color/white"
            android:cacheColorHint="@color/white"
            android:divider="@color/divider"
            android:dividerHeight="0.1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/divider"/>
    </LinearLayout>
</RelativeLayout>